{
    "name": "smartworkDesktop",
    "description": "SmartWorkDesktop 1.0.2",
    "packageType": "exe",
    "uninstallTime": "never",

    "installer": "smartworkDesktop-installer.exe",
    "installerArgs": {
        args: "/S",
        elevate: true,
        desktop: true
    },

    "uninstallerArgs": {
        command: "c:\\Program Files\\SmartWork Desktop\\Uninstall SmartWork Desktop.exe",
        args: "/S",
        desktop: true,
        elevate: true
    },

    stop: {
        cmd: "taskkill",
        args: ["/f", "/im", "SmartWork Desktop.exe"]
    },

    isInstalled: {
        transform: {
            type: "fluid.transforms.value",
            input: "${{exists}c:\\Program Files\\SmartWork Desktop\\SmartWork Desktop.exe}"
        }
    }
}
