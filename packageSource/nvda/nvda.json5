{
    "name": "nvda",
    "description": "NVDA 2019.2.1",
    "packageType": "exe",

    "installer": "nvda_2019.2.1.exe",
    "installerArgs": {
        args: [
            "--install-silent",
        ],
        desktop: true,
        elevate: true
    },
    "uninstallerArgs": {
        command: "c:\\Program Files (x86)\\nvda\\uninstall.exe",
        args: ["/S"],
        desktop: true,
        elevate: true
    },

    start: "\"C:\\Program Files (x86)\\nvda\\nvda_noUiAccess.exe\" --minimal",
    stop: {
        cmd: "taskkill",
        args: ["/f", "/im", "nvda_noUiAccess.exe"]
    },

    //uninstallCommands: {
    //   "uninstall:before": {
    //       command: "taskkill",
    //       args: ["/f", "/im", "nvda_noUiAccess.exe"]
    //   }
    //},

    isInstalled: {
        transform: {
            type: "fluid.transforms.value",
            input: "${{exists}c:\\Program Files (x86)\\nvda\\nvda.exe}"
        }
    }
}
